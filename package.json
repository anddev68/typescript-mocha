{
  "name": "typescript-mocha",
  "description": "skeleton for TypeScript users.",
  "version": "0.1.0",
  "author": {
    "name": "TDD BaseCamp and other contributors"
  },
  "main": "src/sample.js",
  "license": "MIT",
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^8.0.25",
    "@types/power-assert": "^1.4.29",
    "@types/source-map": "^0.5.1",
    "del-cli": "^1.1.0",
    "espower-typescript": "^8.1.0",
    "mocha": "^3.5.0",
    "nyc": "^11.1.0",
    "power-assert": "^1.4.4",
    "source-map-support": "^0.4.16",
    "ts-node": "^3.3.0",
    "tslint": "^5.7.0",
    "typescript": "^2.5.1"
  },
  "scripts": {
    "lint": "tslint -c tslint.json 'src/**/*.ts' 'test/**/*.ts'",
    "pretest": "npm run lint",
    "test": "mocha --compilers ts:ts-node/register --require source-map-support/register --full-trace --bail",
    "watch": "mocha --compilers ts:ts-node/register --require source-map-support/register --watch",
    "coverage": "del coverage && nyc --reporter html --reporter=text --extension .ts npm test"
  }
}
